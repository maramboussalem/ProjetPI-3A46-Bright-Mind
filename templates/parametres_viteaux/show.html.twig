{% extends 'admin/base_back.html.twig' %}

{% block title %}Paramètres Vitaux{% endblock %}

{% block body %}
    <h1>Paramètres Vitaux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ parametres_viteaux.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ parametres_viteaux.name }}</td>
            </tr>
            <tr>
                <th>Fc</th>
                <td>{{ parametres_viteaux.fc }}</td>
            </tr>
            <tr>
                <th>Fr</th>
                <td>{{ parametres_viteaux.fr }}</td>
            </tr>
            <tr>
                <th>Ecg</th>
                <td>{{ parametres_viteaux.ecg }}</td>
            </tr>
            <tr>
                <th>TAS</th>
                <td>{{ parametres_viteaux.TAS }}</td>
            </tr>
            <tr>
                <th>TAD</th>
                <td>{{ parametres_viteaux.TAD }}</td>
            </tr>
            <tr>
                <th>Âge</th>
                <td>{{ parametres_viteaux.age }}</td>
            </tr>
            <tr>
                <th>Spo2</th>
                <td>{{ parametres_viteaux.spo2 }}</td>
            </tr>
            <tr>
                <th>Gsc</th>
                <td>{{ parametres_viteaux.gsc }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_parametres_viteaux_index') }}" class="btn btn-secondary">
            ⬅ Retour à la liste
        </a>
        <a href="{{ path('app_parametres_viteaux_edit', {'id': parametres_viteaux.id}) }}" class="btn btn-primary">
            Modifier
        </a>
    </div>

    <div class="mt-3">
        {{ include('parametres_viteaux/_delete_form.html.twig') }}
    </div>
{% endblock %}
