{% extends 'admin/base_back.html.twig' %}

{% block title %}Modifier les Paramètres Vitaux{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-primary">Modifier les Paramètres Vitaux</h1>

        <form method="post" action="{{ path('app_parametres_viteaux_edit', {'id': parametres_viteaux.id}) }}" class="table-responsive">
            
