<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>{% block title %}Page d'accueil{% endblock %}</title>

    {% block css %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/global.css') }}" rel="stylesheet">
        <link href="{{ asset('css/index.css') }}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex&display=swap" rel="stylesheet">
    {% endblock %}
</head>

<body>
<div class="main clearfix position-relative">
    <div class="main_1 clearfix position-absolute top-0 w-100">
        <section id="header">
            <nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
                <div class="container-xl">
                    <a class="navbar-brand p-0 fw-bold text-white" href="{{ path('app_home') }}">
                        <i class="fa fa-stethoscope me-1 col_blue"></i> BRIGHT <span class="fw-normal">Mind</span><br>
                        <span class="font_14 fw-normal span_1">Médecine Familiale</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mb-0 ms-auto">
                            <li class="nav-item"><a class="nav-link active" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">Services Médicaux</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Course</a></li>
                                    <li><a class="dropdown-item" href="#">Course Detail</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                            <li class="nav-item">
                                <a class="nav-link link_icon rounded-circle" href="#"><i class="fa fa-user"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link collapsed" href="#" id="panier-btn" style="border: 2px solid green; padding: 10px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                            </li>
                            <!-- Menu déroulant -->
                            <ul id="stock-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="{{ path('app_medicament2_index2') }}">
                                        <i class="bi bi-capsule"></i><span>Médicament</span>
                                    </a>
                                </li>
                            </ul>
                        </ul>
                    </div>
                </div>
            </nav>
        </section>
    </div>

    <div class="main_2 clearfix">
        <section id="center" class="center_home">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('img/1.jpg') }}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-md-block">
                        <h1 class="mt-3"> Système Intelligent de Gestion Hospitalière</h1>
                        <h6 class="mb-0 mt-4"><a class="button" href="#"> Se connecter <i class="fa fa-caret-right ms-1 col_blue"></i></a></h6>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

{% block body %}{% endblock %}

{% block js %}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script>
        document.getElementById('panier-btn').addEventListener('click', function () {
            var stockNav = document.getElementById('stock-nav');
            // Bascule de l'état 'collapse' (affiche ou masque l'élément)
            stockNav.classList.toggle('collapse');
        });
    </script>
{% endblock %}

</body>
</html>
