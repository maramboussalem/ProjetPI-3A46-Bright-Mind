{% extends 'base.html.twig' %}

{% block title %}Service Médical{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Service Médical</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ service_med.id }}</td>
                </tr>
                <tr>
                    <th>Nom du Service</th>
                    <td>{{ service_med.nomService }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ service_med.descriptionMed }}</td>
                </tr>
            </tbody>
        </table>

        <div class="action-buttons">
            <a href="{{ path('app_service_med_index') }}" class="btn btn-secondary">← Retour à la liste</a>
            {{ include('service_med/_delete_form.html.twig') }}
        </div>

       
    </div>

    <style>
        .container {
            padding: 20px;
        }

        .table {
            width: 100%;
            margin-bottom: 20px;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .action-buttons {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .action-buttons a {
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .action-buttons .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .action-buttons .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .action-buttons a:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
