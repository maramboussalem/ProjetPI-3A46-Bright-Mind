{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

<style>
/* Style général */
body {
    font-family: Arial, sans-serif;
    background-color: #f3f4f6;
    color: #333;
    margin: 0;
    padding: 0;
}

/* Conteneur principal */
.container {
    padding: 20px;
    margin-top: 20px;
}

/* Cartes */
.col-3 {
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
}

.col-3:hover {
    transform: translateY(-5px);
}

/* Image du médicament */
.card-header img {
    border-radius: 12px 12px 0 0;
    object-fit: cover;
}

/* Corps de la carte */
.card-body {
    padding: 15px;
    text-align: center;
}

/* Titre et description */
.card-body h5 {
    font-size: 1.2rem;
    font-weight: bold;
    color:rgb(44, 122, 123);
    margin-bottom: 10px;
}

.card-body p {
    font-size: 0.9rem;
    color: #555;
    line-height: 1.5;
}

/* Liste des détails */
.card-body ul {
    list-style-type: none;
    padding: 0;
    font-size: 0.9rem;
    color: #444;
}

.card-body li {
    margin-bottom: 5px;
}

.card-body strong {
    color:rgb(44, 122, 123);
}

/* Responsive */
@media (max-width: 768px) {
    .col-3 {
        flex: 0 0 48%;
        margin-bottom: 20px;
    }
}

@media (max-width: 576px) {
    .col-3 {
        flex: 0 0 100%;
    }
}
</style>

<br><br><br><br><br><br>

<div class="container m-1">
    <div class="row">
        {% for medicament in medicaments %}
            <div class="col-3">
                <div class="card-header">
                    <img src="{{ asset('Medicament/' ~ medicament.image) }}" width="100%" height="200px" alt="{{ medicament.NomMedicament }}">
                </div>
                <div class="card-body">
                    <h5>{{ medicament.NomMedicament }}</h5>
                    <p>{{ medicament.Description }}</p>
                    <ul>
                        <li>Prix: <strong>{{ medicament.Prix }} TND</strong></li>
                        <li>Type: <strong>{{ medicament.Type }}</strong></li>
                        <li>Expiration: <strong>{{ medicament.expireat|date('d/m/Y') }}</strong></li>
                    </ul>
                </div>
            </div>
            <br><br>
        {% endfor %}
    </div>
</div>

{% endblock %}
