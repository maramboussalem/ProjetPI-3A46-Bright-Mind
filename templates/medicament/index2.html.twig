{% extends 'base.html.twig' %}

{% block title %}Medicament index{% endblock %}

{% block body %}
<style>
/* Style général de la page */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f9f9f9;
    color: #333;
    margin: 0;
    padding: 0;
}

h1 {
    text-align: center;
    color: #007bff;
    font-size: 28px;
    margin-top: 20px;
}

/* Conteneur du formulaire */
.form-container {
    max-width: 500px;
    background: white;
    margin: 30px auto;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 123, 153, 0.2);
    border: 1px solid #f9f9f9;
}

/* Champs du formulaire */
form input,
form select,
form textarea {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    transition: all 0.3s ease-in-out;
}

form input:focus,
form select:focus,
form textarea:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgb(24, 114, 209);
    outline: none;
}

/* Bouton d'inscription */
form button {
    width: 100%;
    background: linear-gradient(135deg, #007bff, rgb(24, 114, 209));
    color: white;
    padding: 12px;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    margin-top: 20px;
}

form button:hover {
    background: linear-gradient(135deg, #007bff, rgb(24, 114, 209));
    transform: scale(1.02);
}

/* Sections dynamiques */
#patientFields, #medecinFields {
    margin-top: 20px;
    padding: 15px;
    background: #f0f9ff;
    border-radius: 5px;
    border-left: 4px solid #007bff;
}

/* Animation d'apparition */
.fade-in {
    animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Style de la pagination */
.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    list-style: none;
    padding: 0;
}

.pagination li {
    margin: 0 5px;
}

.pagination a {
    text-decoration: none;
    color: #007bff;
    padding: 10px 15px;
    background-color: white;
    border: 1px solid #007bff;
    border-radius: 5px;
    transition: background-color 0.3s, color 0.3s;
}

.pagination a:hover {
    background-color: #007bff;
    color: white;
}

.pagination .active a {
    background-color: #007bff;
    color: white;
    pointer-events: none;
}

.pagination .disabled a {
    color: #ccc;
    pointer-events: none;
    background-color: #f1f1f1;
}

</style>
    <h1>List Medicament</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NomMedicament</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                 <td>{{ medicament.NomMedicament }}</td>
                <td>{{ medicament.Description }}</td>
                <td>{{ medicament.Quantite }}</td>
                <td>{{ medicament.Prix }}</td>
                <td>{{ medicament.Type }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
