{% extends 'base.html.twig' %}

{% block title %}Medicament index{% endblock %}

{% block body %}

    <h1>List Medicament</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomMedicament</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                 <td>{{ medicament.getId() }}</td>
                 <td>{{ medicament.NomMedicament }}</td>
                <td>{{ medicament.Description }}</td>
                <td>{{ medicament.Quantite }}</td>
                <td>{{ medicament.Prix }}</td>
                <td>{{ medicament.Type }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
