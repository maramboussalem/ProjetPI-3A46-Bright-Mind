{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block body %}
    <style>
        #center {
            position: relative;
            padding: 100px 0;
            text-align: center;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.81);
            border-radius: 10px;
            padding: 40px 30px;
            margin-top: 30px;
            z-index: 2;
        }

        .main_2 {
            position: relative;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('{{ asset('img/1.jpg') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(90%);
        }

        .main_2::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.37);
            z-index: 1;
        }

        .container {
            max-width: 600px;
            z-index: 2;
        }

        h2 {
            font-family: 'Roboto', sans-serif;
            color: #333;
            font-size: 30px;
            font-weight: 700;
        }

        .btn {
            font-weight: 500;
            border-radius: 25px;
            padding: 12px 30px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary {
            background-color: #0066cc;
            border: none;
        }

        .btn-primary:hover {
            background-color: #005bb5;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background-color: #777;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #666;
            transform: translateY(-2px);
        }

        .form-control {
            font-size: 16px;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #0066cc;
            box-shadow: 0 0 5px rgba(0, 102, 204, 0.3);
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 8px;
            color: #555;
        }

        .text-center {
            text-align: center;
        }
    </style>

    <div class="main clearfix position-relative">
        <div class="main_2 clearfix position-relative">
            <section id="center" class="center_home">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="carousel-caption d-md-block"></div>
                    </div>
                </div>
            </section>

            <div class="container mt-5 position-absolute top-50 start-50 translate-middle w-75">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Submit a New Reclamation</h2>

                    {{ include('reclamation/_form2.html.twig', { 'button_label': 'Submit' }) }}

                    <div class="text-center mt-3">
                       <a href="{{ path('app_reclamation_index2') }}" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
