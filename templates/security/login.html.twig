{% block title %}<title>Connexion</title>{% endblock %}

{% block head %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 400px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        .container h2 {
            color: #007b99;
            margin-bottom: 10px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 14px;
        }

        .btn-primary {
            width: 100%;
            background: linear-gradient(135deg, #007b99, #00c0c7);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            margin-top: 20px;
        }

        .btn-primary:hover {
            background-color: rgb(78, 183, 186);
        }

        .link {
            margin-top: 10px;
            font-size: 14px;
            display: block;
            color: rgb(78, 183, 186);
            text-decoration: none;
        }

        .link:hover {
            text-decoration: underline;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #ddd;
        }

        .divider:not(:empty)::before {
            margin-right: 10px;
        }

        .divider:not(:empty)::after {
            margin-left: 10px;
        }

        .google-btn {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            width: 95%;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            margin-top: 10px;
        }

        .google-btn img {
            height: 18px;
            margin-right: 10px;
        }
        .remember-label {
    font-size: 14px;
    color: #333;
    display: flex;
    align-items: center;
    cursor: pointer;
}

.remember-checkbox {
    margin-right: 10px;
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 1px solid #ddd;
    background-color: #fff;
    cursor: pointer;
    transition: background-color 0.3s, border-color 0.3s;
}

.remember-checkbox:checked {
    background-color: #00c0c7;
    border-color: #00c0c7;
}

.remember-checkbox:focus {
    outline: none;
    border-color: #007b99;
}

.remember-checkbox:hover {
    background-color: #f1f1f1;
}

.remember-label:hover {
    color: #007b99;
}
.alert-danger {
    color: #fff;
    background-color: #dc3545;
    border: 1px solid #dc3545;
    padding: 10px;
    border-radius: 5px;
    text-align: center;
    margin-bottom: 15px;
}

    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <form method="post" enctype="multipart/form-data" novalidate="novalidate">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <img src="{{ asset('img/4.jpg') }}" alt="Your Logo" class="img-fluid mb-3" style="max-width: 300px;">
            <h1 class="h3 mb-3 font-weight-normal"></h1>
            
            <!-- Input fields with placeholders inside -->
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="checkbox mb-3">
               <label class="remember-label">
                  <input type="checkbox" name="_remember_me" class="remember-checkbox"> Se souvenir de moi
               </label>
            </div>


            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
           
            <a href="#" class="link">Mot de passe oubli√© ?</a>
            <a href="{{ path('app_utilisateur_new') }}" class="link">S'inscrire</a>
        </form>
        
        <div class="divider">Ou</div>
        <div class="google-btn">
            <img src="{{ asset('img/3.jpg') }}" class="d-block w-100" alt="..."> Se connecter avec Google
        </div>
        <a href="#" class="link">Contactez-nous</a>
    </div>
{% endblock %}
