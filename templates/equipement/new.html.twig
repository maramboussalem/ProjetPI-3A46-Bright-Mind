{% extends 'admin/base_back.html.twig' %}

{% block title %}New Equipement{% endblock %}

{% block body %}
<style>
    /* Style du titre */
    h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Style général du formulaire */
    form {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    /* Style des champs du formulaire */
    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        color: #333;
    }

    .form-control:focus {
        border-color: rgb(24, 17, 151);
        outline: none;
        box-shadow: 0 0 5px rgba(24, 17, 151, 0.5);
    }

    /* Style du bouton de soumission */
    .btn-success {
        background-color: rgb(24, 17, 151);
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-success:hover {
        background-color: rgb(24, 17, 151);
    }

    /* Style du bouton de retour */
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Ajout d'un espacement après le formulaire */
    .btn {
        margin-top: 10px;
    }
</style> 
    

    {{ include('equipement/_form.html.twig') }}

    <a href="{{ path('app_equipement_index') }}">back to list</a>
{% endblock %}
