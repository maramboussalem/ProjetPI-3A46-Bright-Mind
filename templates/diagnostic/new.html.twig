{% extends 'medcin/base_backMedcin.html.twig' %}

{% block title %}Créer un nouveau Diagnostic{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Créer un nouveau Diagnostic</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {% for field in form %}
                        <div class="mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                            {% if field.vars.errors|length > 0 %}
                                <div class="text-danger">
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}

                    {# Display validation errors from the controller if any #}
                    {% if errors is defined and errors|length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="mt-3">
                        <button type="submit" class="btn btn-success me-2">Enregistrer</button>
                        <a href="{{ path('app_diagnosticM_index') }}" class="btn btn-secondary">Retour</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}