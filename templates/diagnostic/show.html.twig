{% extends 'admin/base_back.html.twig' %}

{% block title %}Diagnostic{% endblock %}

{% block body %}
    <h1>Diagnostic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ diagnostic.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ diagnostic.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ diagnostic.description }}</td>
            </tr>
            <tr>
                <th>Date du Diagnostic</th>
                <td>{{ diagnostic.dateDiagnostic ? diagnostic.dateDiagnostic|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ID Patient</th>
                <td>{{ diagnostic.patientID }}</td>
            </tr>
            <tr>
                <th>ID Médecin</th>
                <td>{{ diagnostic.medecinID }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_diagnostic_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_diagnostic_edit', {'id': diagnostic.id}) }}" class="btn btn-primary">Modifier</a>
    </div>

    <!-- Button to generate PDF -->
    <div class="mt-3">
        <a href="{{ path('app_diagnostic_generate_pdf', {'id': diagnostic.id}) }}" class="btn btn-success" target="_blank">
            Voir le Rapport PDF
        </a>
    </div>

    <!-- Include delete form if needed -->
    <div class="mt-3">
        {{ include('diagnostic/_delete_form.html.twig') }}
    </div>
{% endblock %}
