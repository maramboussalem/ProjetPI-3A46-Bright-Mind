{% extends 'admin/base_back.html.twig' %}

{% block title %}Ajouter un Administrateur{% endblock %}

{% block body %}
    <h1>Ajouter un Administrateur</h1>
<style>
/* Style global */
        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color:rgb(78, 183, 186);
            font-size: 28px;
            margin-top: 20px;
        }
        
        /* Champs du formulaire */
        form input,
        form select,
        form textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        form input:focus,
        form select:focus,
        form textarea:focus {
            border-color:rgb(78, 183, 186);
            box-shadow: 0 0 5px rgba(0, 123, 153, 0.3);
            outline: none;
        }

        /* Bouton d'inscription */
        form button {
            width: 100%;
            background: linear-gradient(135deg, #007b99, #00c0c7);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            margin-top: 20px;
        }

        form button:hover {
            background: linear-gradient(135deg, #005f73, #009ca6);
            transform: scale(1.02);
            
        }
</style>
{{ form_start(form, {'attr': {'id': 'utilisateurForm', 'novalidate': 'novalidate'}}) }}

