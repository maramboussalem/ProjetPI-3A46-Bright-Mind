{% extends 'admin/base_back.html.twig' %}

{% block title %}Modifier l'Administrateur{% endblock %}

{% block body %}

    <h1>Veuillez modifier vos coordonnées</h1>
<style>
        /* Style général du formulaire */
        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .form-error p {
            color: red;
            font-size: 12px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            text-align: center;
            display: inline-block;
            width: 100%;
            margin-top: 20px;
            text-decoration: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        /* Style pour les labels */
        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Masquer les champs inutilisés */
        .form-group div[style="display: none;"] {
            display: none;
        }
    </style>
{{ form_start(form, {'attr': {'id': 'utilisateurForm', 'novalidate': 'novalidate'}}) }}

<div style="display: none;">
    {{ form_widget(form.antecedentsMedicaux) }}
