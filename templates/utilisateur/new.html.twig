{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <style>
        /* Style global */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color:rgb(78, 183, 186);
            font-size: 28px;
            margin-top: 20px;
        }
        
        /* Conteneur du formulaire */
        .form-container {
            max-width: 500px;
            background: white;
            margin: 30px auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 123, 153, 0.2);
            border: 1px solid #f9f9f9;;
        }

        /* Champs du formulaire */
        form input,
        form select,
        form textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        form input:focus,
        form select:focus,
        form textarea:focus {
            border-color:rgb(78, 183, 186);
            box-shadow: 0 0 5px rgba(0, 123, 153, 0.3);
            outline: none;
        }

        /* Bouton d'inscription */
        form button {
            width: 100%;
            background: linear-gradient(135deg, #007b99, #00c0c7);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            margin-top: 20px;
        }

        form button:hover {
            background: linear-gradient(135deg, #005f73, #009ca6);
            transform: scale(1.02);
            
        }

        /* Sections dynamiques */
        #patientFields, #medecinFields {
            display: none;
            margin-top: 20px;
            padding: 15px;
            background: #f0f9ff;
            border-radius: 5px;
            border-left: 4px solid rgb(78, 183, 186);;
        }

        /* Animation d'apparition */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .flash-error {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 16px;
        }
    </style>

    <h1>Créer un Compte</h1>

    <div class="form-container">
        {{ include('utilisateur/_form.html.twig') }}
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.getElementById("utilisateur_role");
            const patientFields = document.getElementById("patientFields");
            const medecinFields = document.getElementById("medecinFields");

            function toggleFields() {
                const role = roleSelect.value;

                if (role === "patient") {
                    patientFields.classList.add("fade-in");
                    medecinFields.style.display = "none";
                    patientFields.style.display = "block";
                    disableAndClearFields(medecinFields);
                    enableFields(patientFields);
                } else if (role === "medecin") {
                    medecinFields.classList.add("fade-in");
                    patientFields.style.display = "none";
                    medecinFields.style.display = "block";
                    disableAndClearFields(patientFields);
                    enableFields(medecinFields);
                } else {
                    patientFields.style.display = "none";
                    medecinFields.style.display = "none";
                    disableAndClearFields(patientFields);
                    disableAndClearFields(medecinFields);
                }
            }

            function disableAndClearFields(container) {
                container.querySelectorAll("input, select, textarea").forEach(input => {
                    input.disabled = true;
                    input.value = "";
                });
            }

            function enableFields(container) {
                container.querySelectorAll("input, select, textarea").forEach(input => {
                    input.disabled = false;
                });
            }

            roleSelect.addEventListener("change", toggleFields);
            toggleFields(); // Exécuter au chargement de la page
        });
    </script>
{% endblock %}
