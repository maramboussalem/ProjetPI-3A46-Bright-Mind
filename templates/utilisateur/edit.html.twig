{% extends 'admin/base_back.html.twig' %}

{% block title %}Edit Utilisateur{% endblock %}

{% block body %}
    <style>
        /* Style global */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #007bff;
            font-size: 28px;
            margin-top: 20px;
        }

        /* Conteneur du formulaire */
        .form-container {
            max-width: 500px;
            background: white;
            margin: 30px auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 123, 153, 0.2);
            border: 1px solid #f9f9f9;
        }

        /* Champs du formulaire */
        form input,
        form select,
        form textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        form input:focus,
        form select:focus,
        form textarea:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgb(24, 114, 209);
            outline: none;
        }

        /* Bouton d'inscription */
        form button {
            width: 100%;
            background: linear-gradient(135deg, #007bff, rgb(24, 114, 209));
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            margin-top: 20px;
        }

        form button:hover {
            background: linear-gradient(135deg, #007bff,rgb(24, 114, 209);
            transform: scale(1.02);
        }

        /* Sections dynamiques */
        #patientFields, #medecinFields {
            display: none;
            margin-top: 20px;
            padding: 15px;
            background: #f0f9ff;
            border-radius: 5px;
            border-left: 4px solid #007bff;
        }

        /* Animation d'apparition */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    <h1>Edit Utilisateur</h1>

    <div class="form-container">
        {{ include('utilisateur/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a href="{{ path('app_utilisateur_index') }}" style="display:block; text-align:center; margin-top: 20px;">Back to list</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
