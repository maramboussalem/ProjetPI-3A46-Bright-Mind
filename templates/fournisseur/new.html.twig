{% extends 'admin/base_back.html.twig' %}

{% block title %}New Fournisseur{% endblock %}

{% block body %}
    <style>
        /* Style de la page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        /* Titre de la page */
        h2 {
            color: #2c3e50;
            text-align: center;
            margin-top: 20px;
        }

        /* Conteneur de formulaire */
        form {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Message d'erreur global */
        .alert.alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        /* Groupes de champs du formulaire */
        .form-group {
            margin-bottom: 20px;
        }

        /* Label des champs */
        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #34495e;
        }

        /* Champs du formulaire */
        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Erreurs des champs */
        .alert.alert-danger p {
            margin: 0;
            padding: 5px 0;
        }

        /* Bouton de soumission */
        button[type="submit"] {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }

        /* Bouton hover */
        button[type="submit"]:hover {
            background-color: #2980b9;
        }

        /* Lien pour retourner à la liste */
        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #3498db;
            font-size: 16px;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>

    <h2>Ajouter un fournisseur</h2>

    {# Messages d'erreur pour le formulaire #}
    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {# Afficher les erreurs spécifiques de chaque champ #}
    {% for child in form %}
        <div class="form-group">
            {{ form_label(child) }}
            {{ form_widget(child) }}
            {# Afficher les erreurs de chaque champ #}
            {% if child.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {% for error in child.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endfor %}

    <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}

    <a href="{{ path('app_fournisseur_index') }}">back to list</a>
{% endblock %}
