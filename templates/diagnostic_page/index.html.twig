<div class="form-container">
    <h2>Historique des diagnostics</h2>

    <div class="filter-container">
        <input type="text" id="filterName" class="form-control" placeholder="Nom">
        <input type="number" id="filterAge" class="form-control" placeholder="Âge">
        <input type="number" id="filterFc" class="form-control" placeholder="FC">
        <input type="number" id="filterFr" class="form-control" placeholder="FR">
        <input type="number" id="filterEcg" class="form-control" placeholder="ECG">
        <input type="double" id="filterGad" class="form-control" placeholder="GAD">
        <input type="number" id="filterTas" class="form-control" placeholder="TAS">
        <input type="number" id="filterTad" class="form-control" placeholder="TAD">
        <input type="number" id="filterSpo2" class="form-control" placeholder="SPO2">
        <input type="number" id="filterGsc" class="form-control" placeholder="GSC">
        <input type="date" id="filterDate" class="form-control" name="filterDate">
        <button class="form-button reset-button" onclick="resetFilters()">Réinitialiser</button>

    </div>

    {% if parametres_viteauxes is not empty %}
        <table class="table" id="parametresTable">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Âge</th>
                    <th>FC</th>
                    <th>FR</th>
                    <th>ECG</th>
                    <th>GAD</th>
                    <th>TAS</th>
                    <th>TAD</th>
                    <th>SPO2</th>
                    <th>GSC</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for parametre in parametres_viteauxes %}
                    <tr>
                        <td>{{ parametre.name }}</td>
                        <td>{{ parametre.age }}</td>
                        <td>{{ parametre.fc }}</td>
                        <td>{{ parametre.fr }}</td>
                        <td>{{ parametre.ecg }}</td>
                        <td>{{ parametre.gad is not null ? parametre.gad|number_format(2, '.', ',') : 'N/A' }}</td>
                        <td>{{ parametre.tas }}</td>
                        <td>{{ parametre.tad }}</td>
                        <td>{{ parametre.spo2 }}</td>
                        <td>{{ parametre.gsc }}</td>
                        <td>{{ parametre.createdAt ? parametre.createdAt|date('Y-m-d H:i') : 'N/A' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune donnée disponible</p>
    {% endif %}
</div>

<script>
    // Filtrage dynamique
    document.querySelectorAll('.filter-container input').forEach(input => {
        input.addEventListener('input', filterTable);
    });

    function filterTable() {
        var filters = {
            name: document.getElementById("filterName").value.toLowerCase(),
            age: document.getElementById("filterAge").value,
            fc: document.getElementById("filterFc").value,
            fr: document.getElementById("filterFr").value,
            ecg: document.getElementById("filterEcg").value,
            gad: document.getElementById("filterGad").value,
            tas: document.getElementById("filterTas").value,
            tad: document.getElementById("filterTad").value,
            spo2: document.getElementById("filterSpo2").value,
            gsc: document.getElementById("filterGsc").value,
            date: document.getElementById("filterDate").value,
        };

        var rows = document.querySelectorAll("#parametresTable tbody tr");

        rows.forEach(row => {
            var cells = row.getElementsByTagName("td");
            var match = true;

            if (filters.name && !cells[0].textContent.toLowerCase().includes(filters.name)) match = false;
            if (filters.age && cells[1].textContent != filters.age) match = false;
            if (filters.fc && cells[2].textContent != filters.fc) match = false;
            if (filters.fr && cells[3].textContent != filters.fr) match = false;
            if (filters.ecg && cells[4].textContent != filters.ecg) match = false;
            if (filters.gad && cells[5].textContent != filters.gad) match = false;
            if (filters.tas && cells[6].textContent != filters.tas) match = false;
            if (filters.tad && cells[7].textContent != filters.tad) match = false;
            if (filters.spo2 && cells[8].textContent != filters.spo2) match = false;
            if (filters.gsc && cells[9].textContent != filters.gsc) match = false;
            if (filters.date) {
            var rowDate = cells[10].textContent.trim().split(" ")[0];
            if (rowDate !== filters.date) match = false;
            }

            row.style.display = match ? "" : "none";
        });
    }

    // Réinitialiser les filtres
    function resetFilters() {
        document.querySelectorAll('.filter-container input').forEach(input => input.value = "");
        filterTable();
    }
</script>

<!-- Loading Modal -->
<div id="loadingModal">
    <div id="modalContent">
        <h3>S'il vous plaît attendez, analyse des données...</h3>
    </div>
</div>

<script>
    // Show loading dialog on form submission
    document.querySelector("form").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent form submission

        // Show the loading modal
        document.getElementById("loadingModal").style.display = "block";

        // Submit the form after a brief delay to allow the modal to show
        setTimeout(function() {
            event.target.submit(); // Now submit the form
        }, 2000); // 2-second delay
    });
</script>

