{% extends 'medcin/base_backMedcin.html.twig' %}

{% block title %}Edit Disponibilite{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}


{% block body %}
<style>
/* Général */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    color: #333;
    margin: 0;
    padding: 0;
}

/* Titre principal */
h1 {
    text-align: center;
    color:rgb(21, 14, 224);
    margin-top: 20px;
}

/* Formulaire */
form {
    background-color: #fff;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-width: 700px;
    margin: 0 auto;
}

form .form-group {
    margin-bottom: 20px;
}

form label {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
}

form input, form select, form textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
    color: #333;
}

form input:focus, form select:focus, form textarea:focus {
    border-color:rgb(21, 14, 224);
    outline: none;
}

/* Boutons */
.btn {
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
    text-decoration: none;
    display: inline-block;
    margin-top: 20px;
    transition: background-color 0.3s ease;
}

.btn-primary {
    background-color: rgb(21, 14, 224);
    color: white;
}

.btn-primary:hover {
    background-color: rgb(21, 14, 224);
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
}

.btn-secondary:hover {
    background-color: #5a6268;
}

/* Centrer le contenu */
.center-content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 100vh;
}

/* Retour à la liste */
a.btn-secondary {
    margin-top: 30px;
}

/* Ajout de style sur les messages flash */
.flash-message {
    padding: 10px;
    margin-bottom: 20px;
    background-color: #d4edda;
    color: #155724;
    border-radius: 5px;
    border: 1px solid #c3e6cb;
    text-align: center;
}


</style>
 
    <br>
    <h1>Edit Disponibilite</h1>
<br>
    {{ include('disponibilite/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_disponibilite_index') }}">back to list</a>


{% endblock %}
