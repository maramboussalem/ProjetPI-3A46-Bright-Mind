{% extends 'admin/base_back.html.twig' %}

{% block title %}Post Statistics{% endblock %}

{% block body %}
    <div class="container mt-4">


        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Vues totales</h5>
                        <p class="card-text display-4">{{ total_views }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total des commentaires</h5>
                        <p class="card-text display-4">{{ total_comments }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Posts Table -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Detailed Post Statistics</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Vues</th>
                            <th>Commentaires</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.title }}</td>
                                <td>{{ post.views|default(0) }}</td>
                                <td>{{ post.commentCount|default(0) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}